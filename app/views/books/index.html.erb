<h1>Books</h1>
<%= paginate @books%>
<% @books.in_groups_of(3, false).each do |group| %>
  <div class='row'>
    <% group.each do |book| %>
      <div class='col-md-4'>
        <div class='card'>
          <h5><%= book.name %></h5>
          <p><img src='<%= book.image %>'/></p>
          <h5><%= book.author.first.name %></h5>
        </div>
      </div>
      <% end %>
  </div>
<% end %>
<%= paginate @books  %>